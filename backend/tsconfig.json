{
  "compilerOptions": {
    "rootDir": "src",           // <-- only compile files in src/
    "outDir": "dist",           // <-- put all generated files here
    "module": "CommonJS",       // Node.js compatible
    "target": "ES2020",
    "esModuleInterop": true,    // allows require().default
    "declaration": true,        // generates .d.ts files
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"                  // only include src folder
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
